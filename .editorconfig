# =============================================================================
# EditorConfig for OSCR
# =============================================================================
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfiles
[Dockerfile*]
indent_size = 4

# YAML (docker-compose, CI workflows)
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab
