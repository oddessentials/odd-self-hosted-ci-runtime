{
  "name": "odd-self-hosted-ci-runtime",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "private": true,
  "description": "Docker-first, provider-pluggable self-hosted CI runtime",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddessentials/odd-self-hosted-ci-runtime.git"
  },
  "license": "MIT",
  "scripts": {
    "lint:commits": "commitlint --from HEAD~1 --to HEAD",
    "lint:yaml": "yamllint -c .yamllint.yml .github/workflows/ci.yml .github/workflows/publish.yml .github/workflows/release.yml .github/workflows/smoke-test.yml azure-pipelines.yml azure-pipelines-smoke-test.yml orchestrator/docker-compose.yml",
    "lint": "npm run lint:yaml",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@oddessentials/repo-standards": "^6.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "semantic-release": "^24.0.0"
  }
}